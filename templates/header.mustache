{{!
    Page header.
}}



<header role="banner" id="header" class="pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex {{#headerStyle}} theme-top-header {{/headerStyle}} ">



    <div class="container navbar-nav">

		<div data-region="drawer-toggle">

		<button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn pull-xs-left m-r-1 btn-secondary" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">
		<span aria-hidden="true" class="hidden-xl-down">&#9776;</span>
		<span class="sr-only hidden-xl-down">{{#str}}expand, core{{/str}}</span>
		 <span aria-hidden="true"> </span>
		  <span aria-hidden="true"> </span>
		  <span aria-hidden="true"> </span>
		 </button>



        </div>


		<div class="header-top" id="Mainmenu">


			<nav class="nav navbar-nav hidden-md-down">
			<!-- custom_menu -->
			{{{ output.custom_menu }}}
			<!-- page_heading_menu -->
			{{{ output.page_heading_menu }}}
			</nav>

			  <!-- navbar_plugin_output -->
			  {{{ output.user_menu }}}
			  {{{ output.navbar_plugin_output }}}

        </div>

    </div>
</header>
{{{ theme_loader }}}
<div id="site-header">

	<div class="header-main {{#headerStyle}} theme-main-header {{/headerStyle}}">

			<div class="container">

				<a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand {{# logourl }}has-logo{{/ logourl }}
					{{^ logourl }}
						hidden-sm-down
					{{/ logourl }}
						">
						{{# logourl}}
						<span class="logo ">
							<img src="{{logourl}}" alt="{{sitename}}">
						</span>
						{{/ logourl}}

					{{^ logourl }}
						<span class="site-name hidden-sm-down">{{{ sitename }}}</span>
					{{/ logourl }}
				</a>

				<button class="{{{primaryclass}}}" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>

	<div class="collapse navbar-toggleable-md" id="navbarResponsive">

					{{{output.primarymenu}}}

				</div>
			</div>
	</div>
</div>
